# Database Configuration - Read-only user (for health, chat endpoints)
HOST="your_postgresql_host"
PORT="5432"
DATABASE="your_database_name"
USER="your_readonly_username"
PASSWORD="your_readonly_password"
SSL_MODE="prefer"

# Database Configuration - Update user (for embedding generation routes)
# Optional but recommended for security
UPDATE_USER="your_update_username"
UPDATE_PASSWORD="your_update_password"

# LLM Provider Configuration
# Set LLM_PROVIDER to "OPENAI" or "GROQ" (default: "OPENAI")
LLM_PROVIDER="OPENAI"

# OpenAI Credentials (required if LLM_PROVIDER="OPENAI")
API_KEY="your_openai_api_key"

# GROQ API Credentials (required if LLM_PROVIDER="GROQ")
GROQ_API_KEY="your_groq_api_key"

# Embedding Configuration
# Options: "sentence-transformers/all-MiniLM-L6-v2" or "BAAI/bge-large-en-v1.5"
EMBEDDING_MODEL_NAME="BAAI/bge-large-en-v1.5"

# Vector Cache Configuration
VECTOR_CACHE_ENABLED=true
VECTOR_CACHE_SIMILARITY_THRESHOLD=0.80
VECTOR_CACHE_AUTO_SAVE=true
VECTOR_CACHE_DETERMINISTIC_ONLY=true

# Logging Configuration
LOG_LEVEL="INFO"
LOG_DIR="logs"
LOG_ROTATION_INTERVAL_HOURS=24
LOG_RETENTION_DAYS=30
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
